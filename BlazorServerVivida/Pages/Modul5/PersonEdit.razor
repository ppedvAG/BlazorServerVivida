@page "/Personedit"
@page "/Personedit/{Id:int}"

<h3>PersonEdit</h3>
<EditForm  OnSubmit="save" EditContext="_edx">
    <DataAnnotationsValidator></DataAnnotationsValidator>
    <div class="mb-3 row">
        <label  class="col-sm-2 col-form-label">Name</label>
        <div class="col-sm-10">
              <InputTextChanged @bind-Value="_person.Name" class="form-control"></InputTextChanged>
            <ValidationMessage For="@(()=>_person.Name)"></ValidationMessage>
        </div>
    </div>
    <div class="mb-3 row">
        <label  class="col-sm-2 col-form-label">gross</label>
        <div class="col-sm-10">
              <InputNumber @bind-Value="_person.Gross"  class="form-control"></InputNumber>
            <ValidationMessage For="@(()=>_person.Gross)"></ValidationMessage>
        </div>
    </div>
    <div class="mb-3 row">
        <label  class="col-sm-2 col-form-label">Geb Datum</label>
        <div class="col-sm-10">
              <InputDate @bind-Value="_person.GebTag" class="form-control"></InputDate>
            <ValidationMessage For="@(()=>_person.GebTag)"></ValidationMessage>
        </div>
    </div>
    <button type="submit" class="btn btn-primary">submit</button>
    <ValidationSummary></ValidationSummary>
</EditForm>
@_person.Name
@code {
    [Parameter]
    public int Id { get; set; }
    Person _person = new Person();
    EditContext _edx;
    void save()
    {

    }
    protected override void OnInitialized()
    {
        _edx = new EditContext(_person);
        _edx.SetFieldCssClassProvider(new FieldClassBootstrapFix());
    }


}
